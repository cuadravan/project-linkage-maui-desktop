<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkage.Views.RegisterView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Register Page"
    BackgroundColor="White"
    Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout
            Padding="10"
            HorizontalOptions="Center"
            Spacing="20"
            VerticalOptions="Center">

            <Border
                Padding="20"
                HeightRequest="720"
                HorizontalOptions="Fill"
                StrokeShape="RoundRectangle 20"
                StrokeThickness="2"
                WidthRequest="600">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Offset="0.0" Color="#7C4DFF" />
                        <GradientStop Offset="0.5" Color="#6A3FCC" />
                        <GradientStop Offset="1.0" Color="#4A2E99" />
                    </LinearGradientBrush>
                </Border.Background>

                <VerticalStackLayout Spacing="30">

                    <Label
                        FontAttributes="Bold"
                        FontFamily="Roboto"
                        FontSize="30"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Text="Register, and Be Part of the Linkage Community!"
                        TextColor="White" />

                    <Grid
                        ColumnDefinitions="*,*"
                        ColumnSpacing="30"
                        RowDefinitions="Auto, Auto, Auto"
                        RowSpacing="30">

                        <Grid
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            ColumnDefinitions="*,*"
                            ColumnSpacing="30"
                            RowSpacing="25">

                            <VerticalStackLayout Grid.Column="0" Spacing="15">
                                <Label
                                    FontAttributes="Bold"
                                    Text="First Name"
                                    TextColor="White" />
                                <Entry
                                    BackgroundColor="White"
                                    FontSize="14"
                                    Placeholder="First Name"
                                    Text="{Binding FirstName}" />

                                <Label
                                    FontAttributes="Bold"
                                    Text="Last Name"
                                    TextColor="White" />
                                <Entry
                                    BackgroundColor="White"
                                    FontSize="14"
                                    Placeholder="Last Name"
                                    Text="{Binding LastName}" />

                                <Label
                                    FontAttributes="Bold"
                                    Text="Email Address"
                                    TextColor="White" />
                                <Entry
                                    BackgroundColor="White"
                                    FontSize="14"
                                    Keyboard="Email"
                                    Placeholder="Email Address"
                                    Text="{Binding Email}" />

                                <Label
                                    FontAttributes="Bold"
                                    Text="Password"
                                    TextColor="White" />
                                <Entry
                                    BackgroundColor="White"
                                    FontSize="14"
                                    IsPassword="True"
                                    Placeholder="Password"
                                    Text="{Binding Password}" />

                                <Label
                                    FontAttributes="Bold"
                                    Text="Confirm Password"
                                    TextColor="White" />
                                <Entry
                                    BackgroundColor="White"
                                    FontSize="14"
                                    IsPassword="True"
                                    Placeholder="Confirm Password"
                                    Text="{Binding ConfirmPassword}" />
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" Spacing="15">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Birthdate"
                                    TextColor="White" />
                                <DatePicker
                                    BackgroundColor="White"
                                    Date="{Binding Birthdate}"
                                    FontSize="14"
                                    HeightRequest="45"
                                    HorizontalOptions="Fill"
                                    ToolTipProperties.Text="Optional."
                                    VerticalOptions="Center" />

                                <Label
                                    FontAttributes="Bold"
                                    Text="Gender"
                                    TextColor="White" />
                                <HorizontalStackLayout
                                    HorizontalOptions="Fill"
                                    Spacing="20"
                                    VerticalOptions="Center">
                                    <RadioButton
                                        Content="Male"
                                        GroupName="Gender"
                                        HorizontalOptions="StartAndExpand"
                                        IsChecked="{Binding IsMale}"
                                        TextColor="White"
                                        ToolTipProperties.Text="Required." />

                                    <RadioButton
                                        Content="Female"
                                        GroupName="Gender"
                                        HorizontalOptions="EndAndExpand"
                                        IsChecked="{Binding IsFemale}"
                                        TextColor="White"
                                        ToolTipProperties.Text="Required." />
                                </HorizontalStackLayout>

                                <Label
                                    FontAttributes="Bold"
                                    Text="Location"
                                    TextColor="White" />
                                <Picker
                                    BackgroundColor="White"
                                    FontSize="14"
                                    HeightRequest="45"
                                    HorizontalOptions="Fill"
                                    ItemsSource="{Binding CebuLocations}"
                                    SelectedItem="{Binding SelectedLocation}"
                                    VerticalOptions="Center" />

                                <Label
                                    FontAttributes="Bold"
                                    Text="Mobile Number"
                                    TextColor="White" />
                                <Entry
                                    BackgroundColor="White"
                                    FontSize="14"
                                    Keyboard="Telephone"
                                    Placeholder="Mobile Number"
                                    Text="{Binding MobileNumber}" />

                                <Label
                                    FontAttributes="Bold"
                                    Text="Role of Choice"
                                    TextColor="White" />
                                <Picker
                                    BackgroundColor="White"
                                    FontSize="14"
                                    HeightRequest="45"
                                    HorizontalOptions="Fill"
                                    ItemsSource="{Binding Roles}"
                                    SelectedItem="{Binding SelectedRole}"
                                    VerticalOptions="Center" />
                            </VerticalStackLayout>
                        </Grid>

                        <VerticalStackLayout
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            HorizontalOptions="Center"
                            Spacing="10">
                            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                                <Button
                                    BackgroundColor="#7C4DFF"
                                    Command="{Binding RegisterCommand}"
                                    CornerRadius="10"
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    HeightRequest="50"
                                    Text="Register"
                                    TextColor="White"
                                    WidthRequest="150" />

                                <Button
                                    BackgroundColor="White"
                                    Command="{Binding ClearCommand}"
                                    CornerRadius="10"
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    HeightRequest="50"
                                    Text="Clear"
                                    TextColor="#7C4DFF"
                                    WidthRequest="150" />
                            </HorizontalStackLayout>

                            <Label
                                FontAttributes="Italic"
                                FontSize="14"
                                HorizontalOptions="Center"
                                IsVisible="{Binding ErrorMessage}"
                                Text="{Binding ErrorMessage}"
                                TextColor="White" />
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PLinkage.Views.ProjectOwnerRateSkillProviderView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:PLinkage.Models"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodels="clr-namespace:PLinkage.ViewModels"
    Title="Rate Employed Skill Providers"
    Shell.NavBarIsVisible="False">

    <Grid Padding="20">
        <ScrollView>
            <Border
                Padding="30"
                Background="#F1F0FC"
                Stroke="LightGray"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="0"
                VerticalOptions="Center"
                WidthRequest="400">
                <VerticalStackLayout HorizontalOptions="Center" Spacing="20">

                    <!--  Project Name Header  -->
                    <Border
                        Padding="10"
                        Background="#7C4DFF"
                        Stroke="LightGray"
                        StrokeShape="RoundRectangle 5"
                        StrokeThickness="1">
                        <Label
                            FontAttributes="Bold"
                            FontSize="18"
                            Text="{Binding ProjectName}"
                            TextColor="White" />
                    </Border>

                    <!--  Rating Table  -->
                    <Border
                        Padding="10"
                        Background="#FFFFFF"
                        Stroke="LightGray"
                        StrokeShape="RoundRectangle 5"
                        StrokeThickness="1">
                        <CollectionView ItemsSource="{Binding SkillProvidersToRate}" SelectionMode="None">

                            <CollectionView.Header>
                                <Grid Padding="0,0,0,5" ColumnSpacing="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <HorizontalStackLayout>
                                        <Label
                                            FontAttributes="Bold"
                                            Text="Name"
                                            TextColor="Black"
                                            VerticalOptions="Center" />

                                        <Label
                                            Margin="20,0,0,0"
                                            FontAttributes="Bold"
                                            Text="Rating"
                                            TextColor="Black"
                                            VerticalOptions="Center" />
                                    </HorizontalStackLayout>
                                </Grid>
                            </CollectionView.Header>

                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="0,5" RowDefinitions="Auto">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <HorizontalStackLayout Spacing="20">
                                            <Label
                                                Text="{Binding UserFirstName}"
                                                TextColor="Black"
                                                VerticalOptions="Center" />

                                            <!--  Rating control  -->
                                            <toolkit:RatingView
                                                HorizontalOptions="Center"
                                                MaximumRating="5"
                                                Rating="{Binding TempRating, Mode=TwoWay}"
                                                VerticalOptions="Center" />
                                        </HorizontalStackLayout>

                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>

                        </CollectionView>
                    </Border>

                    <!--  Submit Button  -->
                    <HorizontalStackLayout Padding="10" HorizontalOptions="Center">
                        <Button
                            Padding="12,6"
                            BackgroundColor="#7C4DFF"
                            Command="{Binding SubmitRatingsCommand}"
                            Text="Submit Rating"
                            TextColor="White" />
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Border>
        </ScrollView>
    </Grid>
</ContentPage>
